<% if note %>
  <% if note.title? %>
    <%= presenter.verb %> the <%= link_to note.title, [note.node, note] %> note at <%= link_to note.node.label, note.node %>.
  <% else %>
    <%= presenter.verb %> <%= link_to "Note ##{note.id}", [note.node, note] %> at <%= link_to note.node.label, note.node %>.
  <% end %>
<% else %>
  <% if activity.action == 'destroy' %>
    deleted a note.
  <% else %>
    <%= presenter.verb %> a note which has since been deleted.
  <% end %>
<% end %>

<script>
  var tribute = new Tribute({
    allowSpaces: function () { return false },
    menuItemTemplate: function (item) {
      return '<img src="' + item.original.avatar_url + '" width="24px" height="24px" > ' + item.string;
    },
    noMatchTemplate: function () { return ""; },
    values: [
      <% users.each do |user| %>
      {key: '<%= user.email %>', value: '<%= user.email %>', avatar_url: '<%= avatar_url %>'},
      <% end %>
    ]
  })

  tribute.attach(document.querySelectorAll('.mentionable'));
</script>

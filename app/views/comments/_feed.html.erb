<div class="comment-feed" data-behavior="comment-feed">
<% cache ['comment-feed', comments] do %>
  <h3>Comments <span class="badge" id="comment-count"><%= comments.count %></span></h3>
  <div class="comment-list">
    <%= render(comments, cached: true) if comments.any? %>

    <div data-notice="no-comments" class="comment <% if comments.any? %>hide<% end %>">
      There have been no comments yet.
    </div>
  </div>
<% end %>

<%= render 'comments/new' %>
</div>
